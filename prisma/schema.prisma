generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model LuxuryVideos {
  id           String @id @default(cuid())
  s3Key        String @unique
  thumbnailUrl String
  videoUrl     String
  videoLength  Int?       // Video length in seconds

  // AI-powered content analysis
  tags           String[]   // Keywords and tags (e.g., "yacht", "sunset", "travel")
  categories     String[]   // Broader categories (e.g., "Luxury Travel", "Real Estate")
  objects        String[]   // Specific objects detected (e.g., "Ferrari", "Rolex watch")
  setting        String[]   // Scene setting (e.g., "beach", "cityscape", "mountains")
  mood           String[]   // Vibe or mood (e.g., "inspirational", "relaxing", "energetic")
  dominantColors String[]   // Dominant colors in hex format (e.g., "#FFD700")

  // AI analysis metadata
  isAnalyzed     Boolean  @default(false)
  analyzedAt     DateTime?

  // Metadata
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt

  @@index([s3Key])
  @@index([isAnalyzed])
  @@index([tags])
  @@index([categories])
}
